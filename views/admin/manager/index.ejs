<%- include('../public/page_header') %>

<div class="container-fluid">
    <div class="row">


        <div class="panel panel-default">
            <div class="panel-heading">
                搜索
            </div>
            <div class="panel-body">
                <form role="form" class="form-inline">
                    <div class="form-group">
                        <label for="name">名称</label>
                        <input type="text" class="form-control" id="name" placeholder="请输入名称">
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-default">开始搜索</button>
                    </div>
                </form>
            </div>
        </div>
        <!--
                列表展示
            -->
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr class="th">
                        <th>管理员名称</th>
                        <th>管理员电话</th>
                        <th>管理员邮箱</th>
                        <th>管理员角色</th>
                        <th class="text-center">操作</th>
                    </tr>
                </thead>
                <tbody>

                    <% for (let item of adminResult) { %>
                    <tr>
                        <td><%= item.username %></td>
                        <td><%= item.mobile %></td>
                        <td><%= item.email %></td>
                        <td><%= item.role.length ? item.role[0].title : '' %></td>

                        <td class="text-center">
                            <a href="/<%= config.adminPath %>/manager/edit?id=<%= item._id %>">修改</a>
                            <a href="/<%= config.adminPath %>/manager/doDelete?id=<%= item._id %>">删除</a>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>

        </div>
    </div>
</div>

</body>

</html>